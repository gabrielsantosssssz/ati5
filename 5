<body>

    <div class="container">
        <div class="abas">
            <div class="aba ativa" id="aba1" onclick="mostrarConteudo(1)">Aba 1</div>
            <div class="aba" id="aba2" onclick="mostrarConteudo(2)">Aba 2</div>
            <div class="aba" id="aba3" onclick="mostrarConteudo(3)">Aba 3</div>
        </div>
        
        <div class="conteudo" id="conteudo1">
            <div id="cronometro">0</div>
        </div>
        
        <div class="conteudo" id="conteudo2" style="display: none;">
            <div class="slideshow-container">
                <div class="slide">
                    <img src="https://via.placeholder.com/400x200?text=Imagem+1" alt="Imagem 1">
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/400x200?text=Imagem+2" alt="Imagem 2">
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/400x200?text=Imagem+3" alt="Imagem 3">
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/400x200?text=Imagem+4" alt="Imagem 4">
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/400x200?text=Imagem+5" alt="Imagem 5">
                </div>

                <a class="anterior" onclick="mudarSlide(-1)">&#10094;</a>
                <a class="proximo" onclick="mudarSlide(1)">&#10095;</a>
            </div>
        </div>
        
        <div class="conteudo" id="conteudo3" style="display: none;">
            <input type="number" id="numeroTabuada" placeholder="Digite um número">
            <button onclick="calcularTabuada()">Calcular Tabuada</button>
            <div id="tabuadaResultado"></div>
        </div>
    </div>

    <script>
        function mostrarConteudo(aba) {
            document.querySelector("#conteudo1").style.display = "none";
            document.querySelector("#conteudo2").style.display = "none";
            document.querySelector("#conteudo3").style.display = "none";
            document.querySelector("#aba1").classList.remove("ativa");
            document.querySelector("#aba2").classList.remove("ativa");
            document.querySelector("#aba3").classList.remove("ativa");
            document.querySelector("#conteudo" + aba).style.display = "block";
            document.querySelector("#aba" + aba).classList.add("ativa");
        }

        let segundos = 0;
        setInterval(() => {
            segundos++;
            document.querySelector("#cronometro").innerHTML = segundos;
        }, 1000);

        let indiceSlide = 1;
        mostrarSlides(indiceSlide);

        function mudarSlide(n) {
            mostrarSlides(indiceSlide += n);
        }

        function mostrarSlides(n) {
            let slides = document.querySelectorAll(".slide");
            if (n > slides.length) {
                indiceSlide = 1;
            }
            if (n < 1) {
                indiceSlide = slides.length;
            }
            slides.forEach(slide => slide.style.display = "none");
            slides[indiceSlide - 1].style.display = "block";
        }

        function calcularTabuada() {
            const numero = document.querySelector("#numeroTabuada").value;
            let resultado = "";
            for (let i = 1; i <= 10; i++) {
                resultado += `${numero} x ${i} = ${numero * i}<br>`;
            }
            document.querySelector("#tabuadaResultado").innerHTML = resultado;
        }
    </script>

</body>
