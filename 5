<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abas com Cronômetro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .container {
            width: 400px;
            background-color: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .abas {
            display: flex;
            border-bottom: 2px solid #ddd;
        }
        .aba {
            flex: 1;
            text-align: center;
            padding: 10px;
            cursor: pointer;
            background-color: #f7f7f7;
            border: 1px solid #ddd;
            border-bottom: none;
            transition: background-color 0.3s ease;
        }
        .aba:hover {
            background-color: #e0e0e0;
        }
        .aba.ativa {
            background-color: white;
            font-weight: bold;
            border-bottom: 2px solid white;
        }
        .conteudo {
            padding: 20px;
            border: 1px solid #ddd;
        }
        #cronometro {
            font-size: 30px;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="abas">
            <div class="aba ativa" id="aba1" onclick="mostrarConteudo(1)">Aba 1</div>
            <div class="aba" id="aba2" onclick="mostrarConteudo(2)">Aba 2</div>
            <div class="aba" id="aba3" onclick="mostrarConteudo(3)">Aba 3</div>
        </div>
        
        <div class="conteudo" id="conteudo1">
            <div id="cronometro">0</div>
        </div>
        
        <div class="conteudo" id="conteudo2" style="display: none;">
            <p>Conteúdo da Aba 2.</p>
        </div>
        
        <div class="conteudo" id="conteudo3" style="display: none;">
            <p>Conteúdo da Aba 3.</p>
        </div>
    </div>

    <script>
        function mostrarConteudo(aba) {
            document.querySelector("#conteudo1").style.display = "none";
            document.querySelector("#conteudo2").style.display = "none";
            document.querySelector("#conteudo3").style.display = "none";
            document.querySelector("#aba1").classList.remove("ativa");
            document.querySelector("#aba2").classList.remove("ativa");
            document.querySelector("#aba3").classList.remove("ativa");
            document.querySelector("#conteudo" + aba).style.display = "block";
            document.querySelector("#aba" + aba).classList.add("ativa");
        }

        let segundos = 0;
        setInterval(() => {
            segundos++;
            document.querySelector("#cronometro").innerHTML = segundos;
        }, 1000);
    </script>

</body>
</html>
