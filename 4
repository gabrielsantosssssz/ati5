    <title>Calculadora</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0e4cc;
            margin: 0;
        }
        .calculadora {
            width: 220px;
            padding: 20px;
            border-radius: 10px;
            background-color: #001f3f;
            box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
        }
        input[type="text"] {
            width: 100%;
            padding: 15px;
            font-size: 20px;
            text-align: right;
            margin-bottom: 10px;
            background-color: #d6d6d6;
            border: none;
            border-radius: 5px;
            color: #333;
        }
        .botoes {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }
        button {
            padding: 20px;
            font-size: 18px;
            cursor: pointer;
            background-color: #0074D9; 
            color: white;
            border: none;
            border-radius: 5px;
        }
        button.operacao {
            background-color: #FF4136; 
        }
        button.igual {
            background-color: #FF851B;
        }
        button.clear {
            background-color: #FF851B;
        }
    </style>
    <script>
        function inserir(valor) {
            document.querySelector("#display").value += valor;
        }

        function limpar() {
            document.querySelector("#display").value = '';
        }

        function calcular() {
            try {
                var expressao = document.querySelector("#display").value;
                document.querySelector("#display").value = eval(expressao);
            } catch (error) {
                alert("Expressão inválida");
            }
        }

        function potencia() {
            var base = prompt("Digite a base:");
            var expoente = prompt("Digite o expoente:");
            if (base && expoente) {
                var resultado = Math.pow(base, expoente);
                document.querySelector("#display").value = resultado;
            }
        }

        function arredondar() {
            var numero = prompt("Digite o número a ser arredondado:");
            if (numero) {
                var resultado = Math.round(numero);
                document.querySelector("#display").value = resultado;
            }
        }

        function raizQuadrada() {
            var numero = prompt("Digite o número para calcular a raiz quadrada:");
            if (numero) {
                var resultado = Math.sqrt(numero);
                document.querySelector("#display").value = resultado;
            }
        }
    </script>
</head>
<body>

    <div class="calculadora">
        <input type="text" id="display" disabled>

        <div class="botoes">
            <!-- Linha 1 -->
            <button onclick="potencia()">x<sup>y</sup></button>
            <button onclick="arredondar()">Arred</button>
            <button onclick="raizQuadrada()">√x</button>
            <button class="operacao" onclick="inserir('/')">÷</button>

            <!-- Linha 2 -->
            <button onclick="inserir('7')">7</button>
            <button onclick="inserir('8')">8</button>
            <button onclick="inserir('9')">9</button>
            <button class="operacao" onclick="inserir('*')">x</button>

            <!-- Linha 3 -->
            <button onclick="inserir('4')">4</button>
            <button onclick="inserir('5')">5</button>
            <button onclick="inserir('6')">6</button>
            <button class="operacao" onclick="inserir('-')">-</button>

            <!-- Linha 4 -->
            <button onclick="inserir('1')">1</button>
            <button onclick="inserir('2')">2</button>
            <button onclick="inserir('3')">3</button>
            <button class="operacao" onclick="inserir('+')">+</button>

            <!-- Linha 5 -->
            <button class="clear" onclick="limpar()">C</button>
            <button onclick="inserir('0')">0</button>
            <button class="igual" onclick="calcular()">=</button>
        </div>
    </div>

</body>
